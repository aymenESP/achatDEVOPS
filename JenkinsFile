pipeline {
    agent any
    stages {
        stage('step 1 : Clone code from Git') {
            steps {
                echo "GitHub clone step"
                git branch: "Sana",
                url: "https://github.com/aymenESP/achatDEVOPS.git"
            }
        }
        stage('step 2 : Compile Maven') {
            steps {
                sh 'mvn clean compile -DskipTests'
            }
        }
        stage('step 3 : Run SonarQube') {
            steps {
                sh   "mvn sonar:sonar -Dsonar.projectKey=devopsproject -Dsonar.host.url=http://http://192.168.1.185:9000 -Dsonar.login=661442f6ec8861168f9cd6c321aa6c2812f20489"
            }

          
        }
        stage('step 4 : Deploy to Nexus') {
            steps {
                sh "mvn clean package -DskipTests deploy:deploy-file -DgroupId=tn.esprit -DartifactId=achat -Dversion=1.0 -DgeneratePom=true -Dpackaging=war -DrepositoryId=deploymentRepo -Durl=http://http://192.168.1.185:9000/repository/maven-releases/ -Dfile=target/achat-1.0.jar"
            }
        }
}
}